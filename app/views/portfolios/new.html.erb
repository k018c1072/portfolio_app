<% provide(:title, 'New Portfolio') %>
<h1>New Portfolio</h1>

<div class='row'>
    <div class = 'col-md-6 col-md-offset-3'>
        <%= form_with(model: @portfolio, local: true) do |f| %>
            <%= f.label :title %>
            <%= f.text_field :title %>

            <%= f.label :description %>
            <%= f.text_area :description %>

            <%= f.label :url %>
            <%= f.text_field :url %>

            <%= f.submit "Create portfolio", class: "btn btn-primary" %>
        <% end %>
    </div>
</div>
