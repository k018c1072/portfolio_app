<% provide(:title, @user.name) %>
<div class = "main">
    <div class="row">
        <aside>
            <section class="user_info">
                <h1>
                    <%= gravatar_for @user %>
                    <%= @user.name %>
                </h1>
            </section>
        </aside>
    </div>
    <div class="right">
        <% if @user.portfolios.any? %>
            <h3>Portfolios (<%= @user.portfolios.count %>)</h3>
            <ol class="portfolios">
                <%= render @portfolios %>
            </ol>
            <%= will_paginate @portfolios %>
        <% end %>
    </div>
</div>
